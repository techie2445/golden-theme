{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .scrolling-text-container {
    overflow: hidden;
    white-space: nowrap;
    width: 100%;
    display: flex;
    align-items: center;
  }

  .scrolling-text-inner {
    display: flex;
    animation: scroll-text {{ section.settings.speed }}s linear infinite;
  }

  /* Pause on hover if enabled */
  {% if section.settings.pause_on_hover %}
  .scrolling-text-container:hover .scrolling-text-inner {
    animation-play-state: paused;
  }
  {% endif %}

  .scrolling-item {
    display: flex;
    align-items: center;
    padding: 0 {{ section.settings.gap_size }}px;
  }
  
  .scrolling-text-content {
    font-size: {{ section.settings.font_size }}px;
    font-weight: {{ section.settings.font_weight }};
    letter-spacing: 0.05em;
    color: {{ section.settings.text_color }};
  }

  /* The Animation */
  @keyframes scroll-text {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }
  
  /* Direction Reverse */
  {% if section.settings.direction == 'right' %}
    @keyframes scroll-text {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(0); }
    }
  {% endif %}
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="scrolling-text-container" role="marquee" aria-label="Announcement text">
    {% for i in (1..10) %}
      <div class="scrolling-text-inner">
        {%- for block in section.blocks -%}
          <div class="scrolling-item" {{ block.shopify_attributes }}>
            
            {%- if block.settings.icon != 'none' -%}
               <span style="margin-right: 10px; font-size: {{ section.settings.font_size }}px;">
                 {% case block.settings.icon %}
                   {% when 'check' %}âœ“
                   {% when 'star' %}â˜…
                   {% when 'fire' %}ðŸ”¥
                   {% when 'heart' %}â™¥
                   {% when 'flash' %}âš¡
                 {% endcase %}
               </span>
            {%- endif -%}

            <span class="scrolling-text-content">{{ block.settings.text }}</span>
          </div>
        {%- endfor -%}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Scrolling Marquee",
  "settings": [
    {
      "type": "header",
      "content": "Look & Feel"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Custom Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Font Size",
      "default": 18
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font Weight",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "600", "label": "Bold" },
        { "value": "900", "label": "Extra Bold" }
      ],
      "default": "600"
    },
    {
      "type": "header",
      "content": "Animation"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 5,
      "max": 60,
      "step": 1,
      "unit": "s",
      "label": "Scroll Speed (Lower is faster)",
      "default": 20
    },
    {
      "type": "select",
      "id": "direction",
      "label": "Direction",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause on hover",
      "default": true
    },
    {
      "type": "range",
      "id": "gap_size",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Gap between items",
      "default": 40
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Free Shipping on All Orders"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "none", "label": "None" },
            { "value": "check", "label": "Checkmark" },
            { "value": "star", "label": "Star" },
            { "value": "fire", "label": "Fire" },
            { "value": "flash", "label": "Flash" },
            { "value": "heart", "label": "Heart" }
          ],
          "default": "star"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scrolling Marquee",
      "blocks": [
        { "type": "text" },
        { "type": "text" },
        { "type": "text" }
      ]
    }
  ]
}
{% endschema %}