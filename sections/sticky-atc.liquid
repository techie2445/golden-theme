{%- if section.settings.enable_sticky_atc and request.page_type == 'product' and product -%}
  {%- style -%}
    #StickyATC {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      z-index: 99;
      background: {{ section.settings.background_color }};
      border-top: 1px solid {{ section.settings.border_color }};
      padding: 12px 0;
      box-shadow: 0 -4px 10px rgba(0,0,0,0.05);
      transition: transform 0.3s ease, opacity 0.3s ease;
      opacity: 0;
      transform: translateY(100%);
      pointer-events: none;
    }

    #StickyATC:not([hidden]) {
      opacity: 1;
      transform: translateY(0);
      pointer-events: auto;
    }

    .sticky-atc__inner {
      display: flex;
      align-items: center;
      justify-content: space-between;
      max-width: {{ settings.page_width | default: 1200 }}px;
      margin: 0 auto;
      padding: 0 1.5rem;
      gap: 15px;
    }

    .sticky-atc__left {
      display: flex;
      align-items: center;
      gap: 15px;
      overflow: hidden;
    }

    .sticky-atc__image {
      flex-shrink: 0;
      width: 50px;
      height: 50px;
      border-radius: 4px;
      border: 1px solid rgba(0,0,0,0.1);
      object-fit: cover;
    }

    .sticky-atc__info {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .sticky-atc__title {
      font-size: 1.4rem;
      font-weight: 600;
      margin: 0;
      line-height: 1.2;
      color: {{ section.settings.text_color }};
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 300px;
    }

    .sticky-atc__sub {
      font-size: 1.2rem;
      color: {{ section.settings.text_color }};
      opacity: 0.85;
      line-height: 1.2;
    }

    .sticky-atc__btn {
      flex-shrink: 0;
      background-color: {{ section.settings.btn_bg_color }};
      color: {{ section.settings.btn_text_color }};
      border: none;
      padding: 10px 24px;
      min-width: 160px;
      min-height: 44px;
      font-size: 1.4rem;
      font-weight: 500;
      cursor: pointer;
      transition: opacity 0.2s;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .sticky-atc__btn:hover {
      opacity: 0.9;
    }

    .sticky-atc__btn:disabled,
    .sticky-atc__btn[aria-disabled="true"] {
      cursor: not-allowed;
      opacity: 0.6;
      background-color: #e0e0e0;
      color: #888;
    }

    @media screen and (max-width: 749px) {
      .sticky-atc__left { display: none; } /* Hide info on mobile to save space */
      .sticky-atc__btn { width: 100%; }
      .sticky-atc__inner { padding: 0 1rem; }
    }
  {%- endstyle -%}

  <div id="StickyATC" class="sticky-atc" hidden>
    <div class="sticky-atc__inner">
      {%- if section.settings.show_product_info -%}
        <div class="sticky-atc__left">
          {%- if product.featured_image -%}
            <img
              src="{{ product.featured_image | image_url: width: 100 }}"
              alt="{{ product.title | escape }}"
              class="sticky-atc__image"
              loading="lazy"
              width="50"
              height="50"
            >
          {%- endif -%}

          <div class="sticky-atc__info">
            <div class="sticky-atc__title">{{ product.title }}</div>
            <div class="sticky-atc__sub">
              {{ product.selected_or_first_available_variant.price | money }}
            </div>
          </div>
        </div>
      {%- endif -%}

      <button type="button" id="StickyATCButton" class="sticky-atc__btn button">
        <span>Add to cart</span>
      </button>
    </div>
  </div>

  <script>
    (function () {
      const sticky = document.getElementById('StickyATC');
      const stickyBtn = document.getElementById('StickyATCButton');
      if (!sticky || !stickyBtn) return;

      // 1. Find the <product-form> container (Common in Dawn)
      const productFormEl =
        document.querySelector('product-form[data-section-id*="__main"]') ||
        document.querySelector('product-form.product-form') ||
        document.querySelector('form[action*="/cart/add"]'); // Fallback for standard forms

      if (!productFormEl) return;

      // 2. Identify the ACTUAL form ID to link inputs that are outside the form tag
      let formId = productFormEl.getAttribute('id');
      const internalForm = productFormEl.querySelector('form');
      if (internalForm) {
        formId = internalForm.getAttribute('id');
      }

      // 3. Find the main ATC button
      const mainAtcBtn =
        productFormEl.querySelector('button[name="add"].product-form__submit') ||
        productFormEl.querySelector('button[name="add"]');

      if (!mainAtcBtn) return;

      const footerEl =
        document.querySelector('footer') ||
        document.getElementById('shopify-section-footer') ||
        document.querySelector('[id*="shopify-section-"][id*="footer"]');

      // Sync Label & Disabled State
      const syncState = () => {
        const label = (mainAtcBtn.innerText || '').replace(/\s+/g, ' ').trim();
        const mainDisabled = mainAtcBtn.hasAttribute('disabled') || mainAtcBtn.disabled;
        
        {% if section.settings.custom_btn_text != blank %}
          const customLabel = "{{ section.settings.custom_btn_text }}";
          stickyBtn.textContent = mainDisabled ? label : customLabel;
        {% else %}
          stickyBtn.textContent = label || 'Add to cart';
        {% endif %}

        stickyBtn.disabled = mainDisabled;
        stickyBtn.setAttribute('aria-disabled', stickyBtn.disabled ? 'true' : 'false');
      };

      syncState();
      const mo = new MutationObserver(syncState);
      mo.observe(mainAtcBtn, { attributes: true, childList: true, subtree: true });

      // Scroll Visibility Logic
      const handleScroll = () => {
        const scrolled = window.scrollY > 400; // Show after scrolling down 400px
        if (scrolled) {
          sticky.removeAttribute('hidden');
        } else {
          sticky.setAttribute('hidden', '');
        }
      };
      
      window.addEventListener('scroll', handleScroll, { passive: true });
      handleScroll();

      // --- MAIN CLICK HANDLER ---
      stickyBtn.addEventListener('click', function () {
        syncState();
        if (stickyBtn.disabled) {
           // If sold out, scroll user to main area
           productFormEl.scrollIntoView({ behavior: 'smooth', block: 'center' });
           return;
        }

        // === UPDATED SYNC LOGIC ===
        if (formId) {
           // 1. Find the currently selected radio button for quantity (globally by form ID)
           const selectedRadio = document.querySelector(`input[name="quantity"][type="radio"][form="${formId}"]:checked`);
           
           // 2. Find the main number input (globally by form ID or inside form)
           const mainInput = document.querySelector(`input[name="quantity"][type="number"][form="${formId}"]`) || 
                             productFormEl.querySelector('input[name="quantity"][type="number"]');

           // 3. If we have both, force the number input to match the radio button
           if (selectedRadio && mainInput) {
               mainInput.value = selectedRadio.value;
               // Dispatch events so theme JS detects the change
               mainInput.dispatchEvent(new Event('change', { bubbles: true }));
               mainInput.dispatchEvent(new Event('input', { bubbles: true }));
           }
        }
        // ==========================

        mainAtcBtn.click();
      });
    })();
  </script>
{%- endif -%}

