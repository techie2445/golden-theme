{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  /* Core Comparison Slider CSS */
  .content-and-comparison-slider {
    display: grid;
    gap: 2rem;
  }
  @media screen and (min-width: 750px) {
    .content-and-comparison-slider {
        grid-template-columns: 1fr 1fr;
        align-items: center;
    }
    .content-and-comparison-slider--slider-first .desktop-index-1 { order: 1; }
    .content-and-comparison-slider--slider-first .desktop-index-0 { order: 0; }
  }

  comparison-slider {
    display: block;
    position: relative;
    overflow: hidden;
    width: 100%;
    aspect-ratio: 1 / 1; /* Default square, can be adjusted */
    border-radius: var(--media-radius);
    cursor: ew-resize;
    user-select: none;
  }

  .comparison-slider__underlay,
  .comparison-slider__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .comparison-slider__underlay img,
  .comparison-slider__overlay img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .comparison-slider__overlay {
    width: 50%; /* Initial position */
    border-right: 2px solid {{ section.settings.line_color | default: '#fff' }};
    overflow: hidden;
    z-index: 2;
    transition: width 0.1s ease-out;
  }
  
  /* Fix overlay image to prevent squishing */
  .comparison-slider__overlay img {
    max-width: none;
    width: 200%; /* Compensate for 50% container width initially, updated via JS if needed, but 100vw relative to parent is safer via JS or fixed aspect ratio */
    width: calc(100% * (100 / var(--percent, 50))); 
  }

  .comparison-slider__line {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 40px;
    height: 40px;
    background: #fff;
    border-radius: 50%;
    z-index: 3;
    transform: translate(-50%, calc(50% - 20px)); /* Center circle */
    display: flex;
    align-items: center;
    justify-content: center;
    top: 50%;
    pointer-events: none;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }
  
  .comparison-slider__arrow-left, .comparison-slider__arrow-right {
    width: 0; 
    height: 0; 
    border-top: 5px solid transparent;
    border-bottom: 5px solid transparent;
    margin: 0 2px;
  }
  .comparison-slider__arrow-left { border-right: 5px solid #333; }
  .comparison-slider__arrow-right { border-left: 5px solid #333; }

  .comparison-slider__input {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    z-index: 4;
    cursor: ew-resize;
    margin: 0;
  }

  .comparison-slider__labels {
    position: absolute;
    top: 1rem;
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 0 1.5rem;
    z-index: 5;
    pointer-events: none;
  }
  .comparison-label {
    background: rgba(0,0,0,0.6);
    color: #fff;
    padding: 0.2rem 0.8rem;
    border-radius: 4px;
    font-size: 1.2rem;
    font-weight: bold;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="content-and-comparison-slider {% if section.settings.layout == 'slider_first' %}content-and-comparison-slider--slider-first{% endif %}">
      
      <div class="content-container center {% if section.settings.layout == 'slider_first' %} desktop-index-1{% endif %}">
        {%- unless section.settings.title == blank -%}
          <h2 class="{{ section.settings.heading_size }}">
            {{ section.settings.title }}
          </h2>
        {%- endunless -%}
        {%- unless section.settings.text == blank -%}
          <div class="rte">{{ section.settings.text }}</div>
        {%- endunless -%}
        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.link }}" class="button button--primary">
            {{ section.settings.button_label | escape }}
          </a>
        {%- endif -%}
      </div>

      <comparison-slider class="comparison-slider {% if section.settings.layout == 'slider_first' %} desktop-index-0{% endif %}">
        <div class="comparison-slider__labels">
            {% unless section.settings.before_label == blank %}<span class="comparison-label">{{ section.settings.before_label }}</span>{% endunless %}
            {% unless section.settings.after_label == blank %}<span class="comparison-label">{{ section.settings.after_label }}</span>{% endunless %}
        </div>

        <div class="comparison-slider__overlay" style="width: 50%; --percent: 50;">
          {%- if section.settings.before_image != blank -%}
            {{ section.settings.before_image | image_url: width: 1500 | image_tag: loading: 'lazy' }}
          {%- else -%}
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        <div class="comparison-slider__underlay">
          {%- if section.settings.after_image != blank -%}
            {{ section.settings.after_image | image_url: width: 1500 | image_tag: loading: 'lazy' }}
          {%- else -%}
            {{ 'product-2' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        <div class="comparison-slider__line" style="left: 50%;">
          <div class="comparison-slider__arrow-left"></div>
          <div class="comparison-slider__arrow-right"></div>
        </div>

        <input type="range" class="comparison-slider__input" min="0" max="100" value="50">
      </comparison-slider>

    </div>
  </div>
</div>

<script src="{{ 'comparison-slider.js' | asset_url }}" defer="defer"></script>

